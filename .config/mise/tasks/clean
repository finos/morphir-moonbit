#!/usr/bin/env bash
# mise description="Clean build artifacts"
set -euo pipefail

echo "ðŸ§¹ Cleaning build artifacts..."

cd pkgs

# Clean each package
for pkg in morphir-sdk morphir-core morphir-moonbit-bindings; do
  if [ -d "$pkg" ]; then
    echo "Cleaning $pkg..."
    cd "$pkg"
    moon clean || true
    rm -rf target/
    cd ..
  fi
done

cd ..

echo "âœ… Clean complete"
